@model Web.Entity.Dto.DepartmentDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Add/Modify Department</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Settings</a></li>
            <li class="breadcrumb-item">Department</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-body">
                    <form id="AddModifyForm">
                        <input type="hidden" value="@Model.DepartmentId" name="DepartmentId" />
                        <input type="hidden" value="@Model.CreatedDate" name="CreatedDate" />
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" value="@Model.DepartmentName"
                                           name="DepartmentName" placeholder="Department Name"
                                           class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            @if (Model.Status != true 
                                                && Model.DepartmentId > 0)
                                            {
                                                <input class="form-check-input" 
                                                       name="Status" value="true"
                                                       type="checkbox" />
                                            }
                                            else
                                            {
                                                <input class="form-check-input" 
                                                       name="Status" value="true" 
                                                    type="checkbox" checked="checked" />
                                            }
                                            Is Active
                                        </label>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <button type="submit" id="btnSave" name="SaveButton" class="btn btn-primary btn-md"><i class="fa fa-save"></i> <span> Save </span> </button>
                        <a href="/DepartmentList" class="btn btn-danger"><i class="fa fa-window-close"></i> Close </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--Row-->
</div>
@Scripts.Render("~/web/backend/jquery-ui")
<script src="~/Assets/Backend/js/jquery.validate.min.js"></script>
<script>
    var $checkoutForm = $('#AddModifyForm').validate({
        ignore: [],
        rules: {
            'DepartmentName': {
                required: true,
                maxlength: 50
            },
        },
        submitHandler: function (form) {
            $("#btnSave").prop('disabled', true)
            $("#btnSave span").html('Saving...')

            var id = $('input[name="DepartmentId"').val();
            var url = "/Department/Insert";
            if (parseInt(id) > 0) {
                url = "/Department/Update";
            }
            $.ajax({
                type: "POST",
                url: url,
                data: $("#AddModifyForm").serialize(),
                success: function (message) {
                    showResultMessage(message, "/DepartmentList")
                },
                error: function (message) {
                    showResultMessage(message)
                }
            })
        },

        errorPlacement: function errorPlacement(error, element) {
            var $parent = $(element).parents('.form-group');

            // Do not duplicate errors
            if ($parent.find('.jquery-validation-error').length) {
                return false;
            }

            $parent.append(
                error.addClass('jquery-validation-error small form-text invalid-feedback')
            );
        },
        highlight: function (element) {
            var $el = $(element);
            var $parent = $el.parents('.form-group');

            $el.addClass('is-invalid');

            // Select2 and Tagsinput
            if ($el.hasClass('select2-hidden-accessible') || $el.attr('data-role') === 'tagsinput') {
                $el.parent().addClass('is-invalid');
            }

        },
        unhighlight: function (element) {
            $(element).parents('.form-group').find('.is-invalid').removeClass('is-invalid');
        }
    });
</script>


