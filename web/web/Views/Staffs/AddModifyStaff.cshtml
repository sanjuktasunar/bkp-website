@model Web.Entity.Dto.StaffsDto
@{
    ViewBag.Title = "AddModifyStaffs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Add/Modify Staff</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Settings</a></li>
            <li class="breadcrumb-item">Staff</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-body">
                    <form id="AddModifyForm">
                        <input type="hidden" value="@Model.StaffId" name="StaffId" />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="floating-label">Role</label>
                                    <select name="RoleId" id="RoleId"
                                            class="form-control">
                                        <option value="">Select Value</option>
                                        @foreach (var x in Model.Roles)
                                        {
                                            if (Model.RoleId == x.Key)
                                            {
                                                <option value="@x.Key"
                                                        selected="selected">
                                                    @x.Value
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@x.Key">
                                                    @x.Value
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="floating-label">Designation</label>
                                    <select name="DesignationId" id="DesignationId"
                                            class="form-control">
                                        <option value="">Select Value</option>
                                        @foreach (var x in Model.Designations)
                                        {
                                            if (Model.DesignationId == x.Key)
                                            {
                                                <option value="@x.Key" selected="selected">
                                                    @x.Value
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@x.Key">
                                                    @x.Value
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="floating-label">Department</label>
                                    <select name="DepartmentId" id="DepartmentId"
                                            class="form-control">
                                        <option value="">Select Value</option>
                                        @foreach (var x in Model.Departments)
                                        {
                                            if (Model.DepartmentId == x.Key)
                                            {
                                                <option value="@x.Key" selected="selected">
                                                    @x.Value
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@x.Key">
                                                    @x.Value
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>User Name</label>
                                    <input type="text" value="@Model.UserName"
                                           name="UserName"
                                           placeholder="Enter User Name"
                                           class="form-control" autocomplete="off" />
                                </div>
                            </div>
                            @if (Model.StaffId == 0)
                            {
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" value="@Model.Password"
                                               name="Password"
                                               placeholder="Enter Password"
                                               class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                            }
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Full Name</label>
                                    <input type="text" value="@Model.StaffName"
                                           name="StaffName"
                                           placeholder="Enter Full Name"
                                           class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="floating-label">Gender</label>
                                    <select name="GenderId" id="GenderId"
                                            class="form-control">
                                        @foreach (var x in Model.Genders)
                                        {
                                            if (Model.GenderId == x.Key)
                                            {
                                                <option value="@x.Key"
                                                        selected="selected">
                                                    @x.Value
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@x.Key">
                                                    @x.Value
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Phone Number</label>
                                    <input type="text" value="@Model.ContactNumber"
                                           name="ContactNumber"
                                           placeholder="Enter Phone Number"
                                           class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Email Address</label>
                                    <input type="text" value="@Model.EmailAddress"
                                           name="EmailAddress"
                                           placeholder="Enter Email Address"
                                           class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Temporary Address</label>
                                    <input type="text" value="@Model.TemporaryAddress"
                                           name="TemporaryAddress"
                                           placeholder="Enter Temporary Address"
                                           class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Permanent Address</label>
                                    <input type="text" value="@Model.PermanentAddress"
                                           name="PermanentAddress"
                                           placeholder="Enter Permanent Address"
                                           class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Citizenship Number</label>
                                    <input type="text" value="@Model.CitizenshipNumber"
                                           name="CitizenshipNumber"
                                           placeholder="Enter Citizenship Number"
                                           class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Pan Number</label>
                                    <input type="text" value="@Model.PanNumber"
                                           name="PanNumber"
                                           placeholder="Enter Pan Number"
                                           class="form-control" />
                                </div>
                            </div>
                            @{
                                string salary = "";
                                if (Model.BasicSalary > 0)
                                {
                                    salary = Model.BasicSalary.ToString();
                                }
                            }
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Basic Salary</label>
                                    <input type="text" value="@salary"
                                           name="BasicSalary"
                                           placeholder="Enter Basic Salary"
                                           class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="floating-label">Status</label>
                                    <select name="UserStatusId" id="UserStatusId"
                                            class="form-control">
                                        @foreach (var x in Model.UserStatus)
                                        {
                                            if (Model.UserStatusId == x.Key)
                                            {
                                                <option value="@x.Key">
                                                    @x.Value
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@x.Key">
                                                    @x.Value
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <button type="submit" id="btnSave" name="SaveButton" class="btn btn-primary btn-md"><i class="fa fa-save"></i> <span>Save</span> </button>
                        <a href="/StaffList" class="btn btn-danger"><i class="fa fa-window-close"></i> Close</a>
                    </form>
                </div>
            </div>
        </div>


    </div>
    <!--Row-->
</div>
@Scripts.Render("~/web/backend/jquery-ui")
<script src="~/Assets/Backend/js/jquery.validate.min.js"></script>
<script>
    var $checkoutForm = $('#AddModifyForm').validate({
        ignore: [],
        rules: {
            'RoleId': {
                required: true
            },
            'DesignationId': {
                required: true
            },
            'DepartmentId': {
                required: true
            },
            'StaffName': {
                required: true,
                maxlength: 200
            },
            'TemporaryAddress': {
                required: true,
                maxlength: 200,
            },
            'PermanentAddress': {
                required: true,
                maxlength: 200,
            },
            'BasicSalary': {
                required: true,
                min: 1,
            },
            'UserName': {
                required: true,
                maxlength: 50,
            },
            'Password': {
                required: true,
                maxlength: 50,
            },
            'ContactNumber': {
                required: true,
                maxlength: 20,
            },
            'EmailAddress': {
                required: true,
                maxlength: 200,
            },
        },
        submitHandler: function (form) {
            $("#btnSave").prop('disabled', true)
            $("#btnSave span").html('Saving............')

            var id = $('input[name="StaffId"').val();
            var url = "/Staffs/Insert";
            if (parseInt(id) > 0) {
                url = "/Staffs/Update";
            }
            $.ajax({
                type: "POST",
                url: url,
                data: $("#AddModifyForm").serialize(),
                success: function (message) {
                    showResultMessage(message, "/StaffList")
                },
                error: function (message) {
                    showResultMessage(message)
                }
            })

        },

        errorPlacement: function errorPlacement(error, element) {
            var $parent = $(element).parents('.form-group');

            // Do not duplicate errors
            if ($parent.find('.jquery-validation-error').length) {
                return false;
            }

            $parent.append(
                error.addClass('jquery-validation-error small form-text invalid-feedback')
            );
        },
        highlight: function (element) {
            var $el = $(element);
            var $parent = $el.parents('.form-group');

            $el.addClass('is-invalid');

            // Select2 and Tagsinput
            if ($el.hasClass('select2-hidden-accessible') || $el.attr('data-role') === 'tagsinput') {
                $el.parent().addClass('is-invalid');
            }

        },
        unhighlight: function (element) {
            $(element).parents('.form-group').find('.is-invalid').removeClass('is-invalid');
        }
    });
</script>

