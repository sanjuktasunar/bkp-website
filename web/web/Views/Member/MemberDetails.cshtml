<!-- Modal -->
<div class="modal fade" id="mdlAddShareAmount" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelLogout"
     data-keyboard="false" data-backdrop="static"
     aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabelLogout">
                    Add/Modify Share Amount
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="AddShareAmount">
                    <input type="hidden" value="@Model.MemberId" name="MemberId" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Amount</label>
                                <input type="text" placeholder="Enter Amount"
                                    class="form-control" name="Amount" />
                            </div>
                        </div>
                    </div>
                    <div class="row" id="divBankDetails">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Bank Name</label>
                                <input type="text" placeholder="Enter Bank Name"
                                       name="BankName" id="BankName"
                                       class="form-control"
                                       value="" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Cheque Number</label>
                                <input type="text" placeholder="Enter Cheque Number"
                                       name="ChequeNumber" id="ChequeNumber"
                                       class="form-control"
                                       value="" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Clearance Date (YYYY/MM/DD) </label>
                                <input type="text"
                                       value=""
                                       class="form-control"
                                       name="ClearanceDateBS"
                                       id="ClearanceDateBS"
                                       placeholder="Clear Date(YYYY/MM/DD)" />
                            </div>
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary"
                                id="btnAddPayment">
                            Save
                        </button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
                <div class="table-responsive p-3">
                    <table class="table align-items-center table-flush table-hover"
                           id="tblPaymentRecords">
                        <thead class="thead-light">
                            <tr>
                                <th>S.N.</th>
                                <th>Payment Mode</th>
                                <th>Amount</th>
                                <th>Bank Details</th>
                                <th>Cheque Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

