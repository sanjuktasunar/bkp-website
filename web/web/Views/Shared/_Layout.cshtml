<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/Assets/Backend/img/logo/logo.jpg" rel="icon">
    <title>BKP ADMIN PANEL</title>

    <link href="~/Assets/Backend/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/Assets/Backend/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Assets/Backend/css/ruang-admin.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link href="~/Assets/Backend/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Assets/Backend/css/sweetalert.min.css" rel="stylesheet" />
    <link href="~/Assets/Backend/css/nepali.datepicker.v3.6.min.css" rel="stylesheet" />
    <link href="~/Assets/Backend/css/custom.css" rel="stylesheet" />
    <link href="~/Assets/Backend/css/select2.min.css" rel="stylesheet" />
    <link href="~/Assets/Backend/css/form-validation.css" rel="stylesheet" />

    <style>
        .btn-header {
            margin-top: 13%;
        }
    </style>
</head>
<body id="page-top">
    @{
        //stock.Data.Dtos.UsersDto usersInfo = ViewBag.UsersInfo;
    }
    <div class="messagealert" id="alert_container">
    </div>
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-light accordion" id="accordionSidebar">
            <a class="sidebar-brand d-flex align-items-center justify-content-center"
               href="~/Dashboard">
                <div class="sidebar-brand-icon">
                    <img src="~/Assets/Backend/img/logo/logo.jpg" class="btn-circle">
                </div>
                <div class="sidebar-brand-text mx-3">
                    ADMIN PANEL
                </div>
            </a>
            <hr class="sidebar-divider my-0">
            <li class="nav-item active">
                <a class="nav-link" href="~/Dashboard">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseBootstrap"
                   aria-expanded="true" aria-controls="collapseBootstrap">
                    <i class="fa fa-cogs"></i>
                    <span>Settings</span>
                </a>
                <div id="collapseBootstrap" class="collapse" aria-labelledby="headingBootstrap" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" id="Menu" href="~/MenuList">Menu</a>
                        <a class="collapse-item" id="FiscalYear" href="~/FiscalYearList">
                            Fiscal Year
                        </a>
                        <a class="collapse-item" id="ShareType" href="~/ShareTypeList">
                            Share Type
                        </a>

                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseForm" aria-expanded="true"
                   aria-controls="collapseForm">
                    <i class="fa fa-user"></i>
                    <span>Users</span>
                </a>
                <div id="collapseForm" class="collapse" aria-labelledby="headingForm" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" id="Role" href="~/RoleList">Role</a>
                        <a class="collapse-item" id="Role" href="~/RoleList">Designation</a>
                        <a class="collapse-item" id="Role" href="~/RoleList">Department</a>
                        <a class="collapse-item" id="User" href="~/UserList">User</a>
                        <a class="collapse-item" id="User" href="~/StaffList">Staff</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseStock" aria-expanded="true"
                   aria-controls="collapseForm">
                    <i class="fa fa-money-bill"></i>
                    <span>Fund Development</span>
                </a>
                <div id="collapseStock" class="collapse" aria-labelledby="headingForm" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" id="OpeningStock"
                           href="~/OpeningStockList">
                            Member
                        </a>
                        <a class="collapse-item" href="~/StockTransferList" id="StockTransfer">
                            Shareholder
                        </a>
                    </div>
                </div>
            </li>
            <hr class="sidebar-divider">
            <div class="version">@ViewBag.VersionInfo</div>
        </ul>
        <!-- Sidebar -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- TopBar -->
                <nav class="navbar navbar-expand navbar-light bg-navbar topbar mb-4 static-top">
                    <button id="sidebarToggleTop" class="btn btn-link rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-bell fa-fw"></i>
                            </a>
                        </li>
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                <img class="img-profile rounded-circle"
                                     src="~/Assets/Backend/img/boy.png"
                                     style="max-width: 60px">
                                @*<span class="ml-2 d-none d-lg-inline text-white small">
                                        @usersInfo.FullName <br />
                                        (@usersInfo.BranchName)
                                    </span>*@
                            </a>
                            <div class="dropdown-menu dropdown-menu-right
                                 shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="#">
                                    @*@usersInfo.FullName (@usersInfo.BranchName)*@
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="~/ViewProfile">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <a class="dropdown-item ClearAllCache" href="#">
                                    <i class="fas fa-book fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Clear All Cache
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="javascript:void(0);"
                                   data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt
                                       fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>
                <!-- Topbar -->
                @RenderBody()
            </div>
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>
                            copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> - developed by
                            <b><a href="https://bkpnepal.com/" target="_blank">BKP Nepal</a></b>
                        </span>
                    </div>
                </div>
            </footer>
            <!-- Footer -->
            <!-- Modal Logout -->
            <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelLogout"
                 aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabelLogout">Logout From System</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to logout?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
                            <a href="~/Logout" class="btn btn-primary">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll to top -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
</body>
</html>
@Scripts.Render("~/web/backend/jquery-ui")

<script src="~/Assets/Backend/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/Assets/Backend/vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="~/Assets/Backend/js/ruang-admin.min.js"></script>
<script src="~/Assets/Backend/custom/layout-js-functions.js"></script>

