
@{
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}

<!-- register -->

<section class="min-h-screen w-full bg-gray-200 py-16">
    <h3 class="my-8 p-3 text-center text-3xl font-bold">Registration Form</h3>
    <div class="mx-auto flex max-w-2xl flex-col items-center justify-center">
        <h4 class="mb-2 text-center">Search your incomplete form</h4>
        <form class="flex flex-col items-center gap-1 md:flex-row">
            <label class="block w-64" for="search-inc-form">
                <input class=" h-8 w-full rounded-sm py-1 px-2 text-sm placeholder-gray-500" type="text"
                       name="search-inc-form" id="search-inc-form"
                       placeholder="Email / Mobile no. / Citizenship no." />
            </label>
            <button class="flex h-8 items-center gap-2 rounded-sm bg-gray-800 hover:bg-gray-700 px-4 py-1 text-sm text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2h-1.528A6 6 0 004 9.528V4z" />
                    <path fill-rule="evenodd"
                          d="M8 10a4 4 0 00-3.446 6.032l-1.261 1.26a1 1 0 101.414 1.415l1.261-1.261A4 4 0 108 10zm-2 4a2 2 0 114 0 2 2 0 01-4 0z"
                          clip-rule="evenodd" />
                </svg>
                <span>Search</span>
            </button>
        </form>
    </div>
    <!--end of search form  -->
    <!-- multistep form and info box grid -->
    <div class="mx-auto mt-12 max-w-4xl grid md:grid-cols-3">
        <!-- multipart forms wrapper -->
        <div class="bg-white p-6 md:col-span-2 md:order-2 overflow-hidden">
            <div class="step step-1">
                <div class="flex justify-between py-4 mb-8">
                    <span class="font-semibold text-2xl">Basic information</span>
                    <span class="py-1 pl-3 pr-10 -mr-10 bg-gray-200 rounded-full shadow">Step 1 of 7</span>
                </div>
                <form class="space-y-2 flex flex-col">
                    <label class="mb-2 block" for="first-name">
                        <span>First Name</span>
                        <input class="input" type="text" name="first-name" id="first-name">
                    </label>
                    <label class="mb-4 block" for="middle-name">
                        <span>Middle Name</span>
                        <input class="input" type="text" name="middle-name" id="middle-name">
                    </label>
                    <label class="mb-2 block" for="last-name">
                        <span>Last Name</span>
                        <input class="input mb-2" type="text" name="last-name" id="last-name">
                    </label>
                    <div class="flex flex-col md:flex-row gap-4 mb-2">
                        <label class="mb-2 block" for="dob">
                            <span>Date of Birth ( B.S ) (eg. 2046-01-2) </span>
                            <input class="input" type="text" name="dob" id="dob">
                        </label>

                        <label class="mb-2 block" for="citizenship">
                            <span>Citizenship no.</span>
                            <input class="input" type="text" name="citizenship" id="citizenship">
                        </label>
                    </div>
                    <label class="mb-2 block" for="citizenship">
                        <span>Gender</span>
                        <select class="input" name="gender" id="gender-select">
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="others">Others</option>
                        </select>
                    </label>

                    <div class="flex justify-end w-full py-4 space-x-4">

                        <button class="next-btn btn flex items-center gap-1" type="submit">
                            <span>Next</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path fill-rule="evenodd"
                                      d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                                      clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
            <!-- end of step 1 -->
            <!-- step-2 form -->
            <div class="hidden step step-2">
                <div class="flex justify-between py-4">
                    <span class="font-semibold text-2xl">Contact Details</span>
                    <span class="py-1 pl-3 pr-10 -mr-10 bg-gray-200 rounded-full shadow">Step 2 of 7</span>
                </div>

                <form class="space-y-2 flex flex-col">
                    <label class="mb-2 block" for="mobile">
                        <span>Mobile Number</span>
                        <input class="input" inputmode="numeric" type="text" name="mobile" id="mobile"
                               maxlength="10" minlength="10" required>
                    </label>
                    <label class="mb-2 block" for="email">
                        <span>Email ( Only Gmail ID accepted</span>
                        <input class="input" type="email" name="email" id="email" required>
                    </label>

                    <div class="flex justify-end w-full py-4 space-x-4">
                        <button class="prev-btn bg-gray-200 hover:bg-gray-300 py-2 px-5  text-sm rounded flex items-center gap-1"
                                type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path fill-rule="evenodd"
                                      d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z"
                                      clip-rule="evenodd" />
                            </svg>
                            <span>Back</span>
                        </button>
                        <button class="next-btn btn flex items-center gap-1" type="submit">
                            <span>Next</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path fill-rule="evenodd"
                                      d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                                      clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
            <!-- end of step 2 -->
            <!-- step 3 form -->
            <div class="hidden step step-3">
                <div class="flex justify-between py-4">
                    <span class="font-semibold text-2xl">Address Details</span>
                    <span class="py-1 pl-3 pr-10 -mr-10 bg-gray-200 rounded-full shadow">Step 3 of 7</span>
                </div>
                <h3 class="mb-4 font-semibold text-gray-600">Permanent Address</h3>
                <form class="space-y-2 flex flex-col">
                    <div class="flex flex-row space-x-4">
                        <span>Is Outside Nepal? </span>
                        <label for="outside-nepal">
                            <span>Yes</span>
                            <input class="accent-black-800 form-check-input" type="radio" id="PermanentRadio"
                                   name="PermanentIsOutsideNepal" "
                                   value=" true">
                        </label>
                        <label for="inside-nepal">
                            <span>No</span>
                            <input class="accent-black-800 form-check-input" type="radio" checked="checked"
                                   id="PermanentRadio" name="PermanentIsOutsideNepal" "
                                   value=" false">
                        </label>
                    </div>
                    <div class="grid md:grid-cols-2 gap-2 md:gap-6">
                        <lable class="mb-2 block">
                            <span>Province</span>
                            <select class="input" name="PermanentProvinceId" id="PermanentProvinceId">
                                <option value="">Select Province</option>
                                <option value="1">Province 1</option>
                                <option value="2">Province 2</option>
                                <option value="3">Province 3</option>
                                <option value="6">Province 4</option>
                                <option value="7">Province 5</option>
                                <option value="8">Province 6</option>
                                <option value="9">Province 7</option>
                            </select>
                        </lable>
                        <lable class="mb-2 block">
                            <span>District</span>
                            <select class="input" name="PermanentDistrictId" id="PermanentDistrictId">
                                <option value="">Select District</option>
                                <option value="56">Baglung</option>
                                <option value="57">Gorkha</option>
                                <option value="58">Kaski</option>
                                <option value="59">Lamjung</option>
                                <option value="60">Manang</option>
                                <option value="61">Mustang</option>
                                <option value="62">Myagdi</option>
                                <option value="63">Nawalparasi</option>
                                <option value="64">Parbat</option>
                                <option value="65">Syangja</option>
                                <option value="66">Tanahu</option>
                            </select>
                        </lable>
                    </div>
                    <div class="grid md:grid-cols-2 gap-6">
                        <lable class="mb-2 block">
                            <span> Municipality/RM:</span>
                            <select class="input" name="PermanentMunicipalityTypeId"
                                    id="PermanentMunicipalityTypeId">
                                <option value="">Select Type</option>
                                <option value="1">Rular Municipality</option>
                                <option value="2">Municipality</option>
                                <option value="3">Sub-metropolis</option>
                                <option value="4">Metropolitan</option>
                            </select>
                        </lable>
                        <lable class="mb-2 block">
                            <span>RM/Municipality Name:</span>
                            <input type="text" id="PermanentMunicipality" class="input" name="PermanentMunicipality"
                                   placeholder="RM/Municipality Name">
                        </lable>
                    </div>

                    <div class="grid md:grid-cols-2 gap-2 md:gap-6">
                        <lable class="mb-2 block">
                            <span>Ward Number:</span>
                            <input type="text" id="PermanentWardNumber" name="PermanentWardNumber"
                                   placeholder="Ward Number" class="input" onkeypress="AllowNumberOnly(event)">
                        </lable>
                        <lable class="mb-2 block">
                            <span>Tole Name:</span>
                            <input type="text" id="PermanentToleName" name="PermanentToleName" class="input"
                                   placeholder="Tole Name">
                        </lable>
                    </div>

                    <h3 class="py-4 font-semibold text-gray-600">Temporary Address</h3>
                    <div class="flex flex-row space-x-4">
                        <span>Is Outside Nepal? </span>
                        <label for="outside-nepal">
                            <span>Yes</span>
                            <input class="accent-black-800 form-check-input" type="radio" id="PermanentRadio"
                                   name="PermanentIsOutsideNepal" "
                                   value=" true">
                        </label>
                        <label for="inside-nepal">
                            <span>No</span>
                            <input class="accent-black-800 form-check-input" type="radio" checked="checked"
                                   id="PermanentRadio" name="PermanentIsOutsideNepal" "
                                   value=" false">
                        </label>
                    </div>
                    <div class="grid md:grid-cols-2 gap-2 md:gap-6">
                        <lable class="mb-2 block">
                            <span>Province</span>
                            <select class="input" name="PermanentProvinceId" id="PermanentProvinceId">
                                <option value="">Select Province</option>
                                <option value="1">Province 1</option>
                                <option value="2">Province 2</option>
                                <option value="3">Province 3</option>
                                <option value="6">Province 4</option>
                                <option value="7">Province 5</option>
                                <option value="8">Province 6</option>
                                <option value="9">Province 7</option>
                            </select>
                        </lable>
                        <lable class="mb-2 block">
                            <span>District</span>
                            <select class="input" name="PermanentDistrictId" id="PermanentDistrictId">
                                <option value="">Select District</option>
                                <option value="56">Baglung</option>
                                <option value="57">Gorkha</option>
                                <option value="58">Kaski</option>
                                <option value="59">Lamjung</option>
                                <option value="60">Manang</option>
                                <option value="61">Mustang</option>
                                <option value="62">Myagdi</option>
                                <option value="63">Nawalparasi</option>
                                <option value="64">Parbat</option>
                                <option value="65">Syangja</option>
                                <option value="66">Tanahu</option>
                            </select>
                        </lable>
                    </div>
                    <div class="grid md:grid-cols-2 gap-2 md:gap-6">
                        <lable class="mb-2 block">
                            <span> Municipality/RM:</span>
                            <select class="input" name="PermanentMunicipalityTypeId"
                                    id="PermanentMunicipalityTypeId">
                                <option value="">Select Type</option>
                                <option value="1">Rular Municipality</option>
                                <option value="2">Municipality</option>
                                <option value="3">Sub-metropolis</option>
                                <option value="4">Metropolitan</option>
                            </select>
                        </lable>
                        <lable class="mb-2 block">
                            <span>RM/Municipality Name:</span>
                            <input type="text" id="PermanentMunicipality" class="input" name="PermanentMunicipality"
                                   placeholder="RM/Municipality Name">
                        </lable>
                    </div>

                    <div class="grid md:grid-cols-2 gap-2 md:gap-6">
                        <lable class="mb-2 block">
                            <span>Ward Number:</span>
                            <input type="text" id="PermanentWardNumber" name="PermanentWardNumber"
                                   placeholder="Ward Number" class="input" onkeypress="AllowNumberOnly(event)">
                        </lable>
                        <lable class="mb-2 block">
                            <span>Tole Name:</span>
                            <input type="text" id="PermanentToleName" name="PermanentToleName" class="input"
                                   placeholder="Tole Name">
                        </lable>
                    </div>

                    <div class="flex justify-end w-full py-4 space-x-4">
                        <button class="prev-btn bg-gray-200 hover:bg-gray-300 py-2 px-5  text-sm rounded flex items-center gap-1"
                                type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path fill-rule="evenodd"
                                      d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z"
                                      clip-rule="evenodd" />
                            </svg>
                            <span>Back</span>
                        </button>
                        <button class="next-btn btn flex items-center gap-1" type="submit">
                            <span>Next</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path fill-rule="evenodd"
                                      d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                                      clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>

                </form>

            </div>
            <!-- step 3 ends here -->
            <!-- step 4 form -->
            <div class="hidden step step-4">
                <div class="flex justify-between py-4">
                    <span class="font-semibold text-2xl">Occupation</span>
                    <span class="py-1 pl-3 pr-10 -mr-10 bg-gray-200 rounded-full shadow">Step 4 of 7</span>
                </div>
                <form class="space-y-2 flex flex-col">
                    <div class="md:grid md:grid-cols-2 gap-2 md:gap-6">
                        <lable class="mb-2 block">
                            <span>Occupation</span>
                            <select class="input" name="OccupationId" id="OccupationId">
                                <option value="">Select Occupation</option>
                                <option value="1">Doctor</option>
                                <option value="2">Engineer</option>
                                <option value="3">Businessman</option>
                                <option value="4">Nurse</option>
                                <option value="5">Housewife</option>
                                <option value="6">Government Job</option>
                                <option value="7">Teacher</option>
                                <option value="8">Other</option>
                            </select>
                        </lable>
                        <lable class="mb-2 block">
                            <span>Interested In</span>
                            <select class="input" name="MemberFieldId" id="MemberFieldId">
                                <option value="">Interested Field</option>
                                <option value="1">Business Management and Grow</option>
                                <option value="2">Administration And Accounting</option>
                                <option value="3">Capital Increase</option>
                                <option value="4">Project Increase</option>
                            </select>
                        </lable>
                    </div>
                    <div class="flex justify-end w-full py-4 space-x-4">
                        <button class="prev-btn bg-gray-200 hover:bg-gray-300 py-2 px-5  text-sm rounded flex items-center gap-1"
                                type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path fill-rule="evenodd"
                                      d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z"
                                      clip-rule="evenodd" />
                            </svg>
                            <span>Back</span>
                        </button>
                        <button class="next-btn btn flex items-center gap-1" type="submit">
                            <span>Next</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path fill-rule="evenodd"
                                      d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                                      clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
            <!-- end of step 4 -->
            <!-- step 5 form -->
            <div class="hidden step step-5">
                <div class="flex justify-between py-4">
                    <span class="font-semibold text-2xl">Upload documents</span>
                    <span class="py-1 pl-3 pr-10 -mr-10 bg-gray-200 rounded-full shadow">Step 5 of 7</span>
                </div>
                <p class="bg-amber-100 mb-4 px-2 w-fit rounded text-xs md:text-sm font-semibold border border-yellow-200">
                    Note
                    : all
                    document must be in .jpg , .png or .jpeg format
                </p>
                <form class="space-y-2 flex flex-col">
                    <label class="mb-2 block" for="MemberImage">
                        <span>Upload your photo</span>
                        <input type="file" name="MemberImage" id="MemberImage" class="input MemberPhotoString">
                    </label>
                    <label class="mb-2 block" for="CitizenshipFrontImage">
                        <span>Citizenship Front:</span>
                        <input type="file" class="input CitizenshipFrontImageString" id="CitizenshipFrontImage"
                               name="CitizenshipFrontImage">
                    </label>
                    <label class="mb-2 block" for="CitizenshipBackImage">
                        <span>Citizenship Front:</span>
                        <input type="file" name="CitizenshipBackImage" class="input CitizenshipBackImageString"
                               id="CitizenshipBackImage">
                    </label>
                    <div class="flex justify-end w-full py-4 space-x-4">
                        <button class="prev-btn bg-gray-200 hover:bg-gray-300 py-2 px-5  text-sm rounded flex items-center gap-1"
                                type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path fill-rule="evenodd"
                                      d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z"
                                      clip-rule="evenodd" />
                            </svg>
                            <span>Back</span>
                        </button>
                        <button class="next-btn btn flex items-center gap-1" type="submit">
                            <span>Next</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path fill-rule="evenodd"
                                      d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                                      clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
            <!-- end of step 5 -->
            <!-- step-6 form -->
            <div class="hidden step step-6">
                <div class="flex justify-between py-4">
                    <span class="font-semibold text-2xl">Payment</span>
                    <span class="py-1 pl-3 pr-10 -mr-10 bg-gray-200 rounded-full shadow">Step 6 of 7</span>
                </div>

                <form class="space-y-2 flex flex-col">
                    <label class="mb-2 block" for="Amount">
                        <span>Amount</span>
                        <input type="text" name="Amount" class="input" id="Amount" placeholder="Amount"
                               onkeypress="AllowPositiveNumber(event)">
                    </label>
                    <label class="mb-2 block" for="VoucherImageFile">
                        <span>
                            Upload voucher Photo / Online payment
                            proof Screenshot or Photo:
                        </span>
                        <input type="file" name="VoucherImageFile" class="input VoucherImageString"
                               id="VoucherImageFile">
                    </label>
                    <label class="mb-2 block" for="ReferalCode">
                        <span>Referal Code</span>
                        <input type="text" name="ReferalCode" class="input" id="ReferalCode"
                               placeholder="Referal Code">
                    </label>
                    <div class="flex justify-end w-full py-4 space-x-4">
                        <button class=" prev-btn bg-gray-200 hover:bg-gray-300 py-2 px-5  text-sm rounded flex items-center gap-1"
                                type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path fill-rule="evenodd"
                                      d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z"
                                      clip-rule="evenodd" />
                            </svg>
                            <span>Back</span>
                        </button>
                        <button class="next-btn btn flex items-center gap-1" type="submit">
                            <span>Next</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path fill-rule="evenodd"
                                      d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                                      clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
            <!-- end of step-6 form -->
