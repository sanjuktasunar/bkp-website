            <form action="">
                <label class="mb-4 block" for="fullname">
                    <input class="input" type="text" name="fullname" id="fullname" placeholder="Full Name" required />
                </label>
                <label class="mb-4 block" for="phone">
                    <input class="input" type="text" name="phone" id="phone" placeholder="Mobile/Phone" required />
