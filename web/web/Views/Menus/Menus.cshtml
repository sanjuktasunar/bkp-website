@model IEnumerable<Web.Entity.Dto.MenusDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Web.Entity.Dto.MenuAccessPermissionDto menus = ViewBag.Menus;
}
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h2 class="h3 mb-0 text-gray-800">Menus List</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Settings</a></li>
            <li class="breadcrumb-item active" aria-current="page">Menus</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4">
                @if (menus.WriteAccess)
                {
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <a href="~/AddModifyMenus" class="btn btn-success btn-sm">
                            <i class="fas fa-plus"></i> Add New
                        </a>
                    </div>
                }
                <div class="table-responsive p-3">
                    <table class="table align-items-center table-flush table-hover" id="dataTable">
                        <thead class="thead-light">
                            <tr>
                                <th>S.N.</th>
                                <th>Name</th>
                                <th>Check Menu Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 1;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="hidden"
                                               value="@item.MenuId" />
                                        @i
                                    </td>
                                    <td>@item.MenuNameEnglish</td>
                                    <td>@item.CheckMenuName</td>
                                    <td>
                                        @if (item.Status == true)
                                        {
                                            <span class="badge badge-success">
                                                Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">
                                                Inactive
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (menus.ModifyAccess == true)
                                        {
                                            <a href="~/AddModifyMenus/@item.MenuId"
                                               class="btn btn-success btn-sm btn-circle"
                                               id="btnEdit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        @if (menus.DeleteAccess == true)
                                        {
                                            <button class="btn btn-danger btn-circle btn-sm"
                                                    id="btnDelete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/web/backend/jquery-ui")
@Scripts.Render("~/web/backend/datatables")
<script>
    $('#dataTable').DataTable();
    $(document).ready(function () {
        $("#dataTable").on('click', '#btnDelete', function () {
            var currentRow = $(this).closest("tr");
            var data = currentRow.find("td:eq(0)").find('input').val();

            swal({
                text: "Are you sure you want to delete this ?",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            type: "POST",
                            url: '/Menus/Delete/' + data,
                            success: function (resp) {
                                showResultMessage(resp, "/MenuList")
                            },
                            error: function (resp) {
                                showResultMessage(resp)
                            }
                        });
                    }
                });
        });
    })
</script>
